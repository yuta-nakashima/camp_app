<body class="index-body">
  <div class='foto-contents'>
    <h2 class='title'>最近のキャンプ</h2>
    <div class="previews">
      <ul class="autoplay">
        <% @tweets.each do |tweet|%>
          <li class='list'>
            <%= link_to tweet_path(tweet.id) do %>
              <% if tweet.image.attached?%>
                <div><%= image_tag tweet.image, class: "foto-img" %></div>
                <div><%= tweet.title%></div>
              <% end %>
            <%end%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

<%# キャンプ場名 %>
    <div class='place-contents'>
        <h2 class='title'>キャンプ場名</h2>
        <ul class='place-lists'>
          <% @members.each do |member|%>
            <li class='list'>
              <%= link_to tweet_path(member.tweet_id) do %>
                <div class='place-name'>
                  <h3> <%= member.place %> </h3>
                </div>
              <%end%>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

<%# カレンダー %>
    <%= month_calendar events:@tweets do | date, tweets| %>
      <%= date.day %>
      <% tweets.each do |tweet| %>
        <div>
          <%= link_to tweet.title, tweet %>
        </div>
      <% end %>
    <% end %>

<%# 欲しいものリスト%>
    <div class='wanted-contents'>
      <h2 class='title'>欲しいものリスト</h2>

  <%# google検索・結果表示 %>
      <script async src="https://cse.google.com/cse.js?cx=ee7493856c23b6f7f"></script>
      <div class="gcse-searchbox-only"></div>
      <script async src="https://cse.google.com/cse.js?cx=ee7493856c23b6f7f"></script>
      <%#<div class="gcse-searchresults-only"></div>

  <%# リスト表示 %>
      <ul class='item-lists'>
        <% @comments.each do |comment|%>
          <li class='list'>
            <%= link_to tweet_path(comment.tweet_id) do %>
              <div class='item-info'>
                <h3 class='item-name'>
                <% if comment.wanted_list.present? %>
                  <%= comment.wanted_list %>
                <% end %>
                </h3>
              </div>
            <%end%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</body>