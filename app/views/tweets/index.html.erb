    <%= link_to '詳細', '#', class: "subtitle" %>
    <ul class='item-lists'>
      <% @comments.each do |comment|%>
        <li class='list'>
          <%= link_to tweet_path(comment.tweet_id) do %>
            <div class='item-img-content'>
              <%#= image_tag 'comment.wanted_list', class: "item-img" %>
