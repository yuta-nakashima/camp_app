<h3><%= current_user.nickname%> さん</h3>
<%= link_to '新規投稿', new_tweet_path(current_user.id), class: "subtitle" %>

<div class='item-contents'>
    <h2 class='title'>最近のキャンプ</h2>
    <%= link_to '詳細', '#', class: "subtitle" %>
    <ul class='item-lists'>
      <% @tweets.each do |tweet|%>
        <li class='list'>
          <%= link_to tweet_path(tweet.id) do %>
            <div class='item-img-content'>
              <% if tweet.image.attached?%>
                <div><%= image_tag tweet.image, class: "item-img" %></div>
                <div><%= tweet.title%></div>
              <% end %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%#= image_tag "member.image" %>
              </h3>
              <div class='item-price'>
                <span><%#= comment.images.attached? %></span>
              </div>
            </div>
          <%end%>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class='item-contents'>
    <h2 class='title'>キャンプ場名</h2>
    <ul class='item-lists'>
      <% @members.each do |member|%>
        <li class='list'>
          <%= link_to tweet_path(member.tweet_id) do %>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= member.place %>
              </h3>
            </div>
          <%end%>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= month_calendar events:@tweets do | date, tweets| %>
  <%= date.day %>

  <% tweets.each do |tweet| %>
    <div>
      <%= link_to tweet.title, tweet %>
    </div>
  <% end %>
<% end %>

