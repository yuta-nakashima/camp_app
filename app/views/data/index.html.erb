<body>
  <div class="data-index">
    <div class="all-photo">
      <% @tweet.each do |tweet|%>
        <%= link_to tweet_path(tweet.id) do %>
          <%= image_tag tweet.image%>
          <% if tweet.item_image.attached?%>
            <%= image_tag tweet.item_image%>
          <%end%>
          <% if tweet.memory_images.attached?%>
            <% tweet.memory_images.each do |memory_image|%>
              <%= image_tag memory_image%>
            <%end%>
          <%end%>
        <%end%>
      <%end%>
    </div>
  </div>
</body>